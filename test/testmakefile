# Binaries and Flags
CC		=	/usr/bin/gcc
AR		=	/usr/bin/ar
RANLIB	=	/usr/bin/ranlib
RM		=	/bin/rm
CFLAGS	=	-Wall -Wextra -Werror
# Directories
LIB		=	./libft/
HEADER	=	.
#  Files
HFILES	=	$(HEADER)/ft_printf.h
SRC		=	ft_printf.c
OBJ		=	$(patsubst %.c,%.o,$(SRC))
# Name
NAME	=	libftprintf.a

.PHONY: all clean fclean re

all:		$(NAME)
			@true

$(NAME):	$(OBJ) $(MAIN) $(HFILES) $(LIB) Makefile
		@echo "Compiling libft ..."
		@make -C $(LIB)
		@echo "Building $(NAME) ..."
		@$(AR) rc ftprintf.a $(OBJ)
		$(AR) -rcT $(NAME) ftprintf.a $(LIB)libft.a
		$(RANLIB) $(NAME)
		#@$(CC) $(CFLAGS) $(MAIN) $(OBJ) -I$(HEADER) -I$(LIB) -L$(LIB) -lft -o $(NAME)
		@echo "OK"

%.o: 		%.c
		@echo "Creating $@ ..."
		@$(CC) $(CFLAGS) -c $< -o $@ -I$(HEADER)

clean:
		@echo "Cleaning Objs ..."
		@$(RM) -f $(OBJ)
		@echo "Cleaning libft Objs ..."
		@make clean -C $(LIB)

fclean:		clean
		@echo "Cleaning $(NAME) exec"
		@$(RM) -f $(NAME)
		@echo "Cleaning libft exec"
		@make fclean -C $(LIB)

re:			fclean all
